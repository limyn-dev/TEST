public class CUrl
  {

  // Membre
  String myLien ;
  String myInfo ;

  public CUrl(String pth) { myInit(path) ;  }



  /***************************************************************************/


  private void myInit(File fic)
    {
    boolean openOk = true ;
    FileInputStream stmFic ;

    // Ouverture du fichier
    try                             { stmFic = new FileInputStream(fic) ; }
    catch (FileNotFoundException e) { openOk = false ;  }
    catch (Exception e)             { openOk = false ;  }
    if (openOk)
      {

      // Lecture des infos
      stmFic.r
      // Fermeture du fichier

      }
    else
      {
      myLien = "Pas de lien trouvé"
      myInfo = "Erreur lors de l'ouverture du fichier: " + fic.getAbsolutePath() ;
      }

    } // Fin de l'initialisation de la class

  } // Fin de la class